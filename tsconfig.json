{
  "compilerOptions": {
    "target": "ES2022", // Updated from "ES2021"
    "outDir": "build",
    "module": "NodeNext", // Updated from "commonjs"
    // "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "declaration": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "ES2022" // Updated from "ES2021"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "server.ts",
    "node_modules",
    "build",
    ".git",
    ".vscode"
  ]
}
